// Common settings for all iOS bundle targets
#include "Touch-Bundle-Common.xcconfig"

// Turn on Swift embedding since we'll likely have Swift code in some/all of the frameworks we are testing. On iOS, the Swift libraries will be copied to Foo.xctest/Frameworks, and the executable is xctest, so we need to use @loader_path to find them
EMBEDDED_CONTENT_CONTAINS_SWIFT = YES
LD_RUNPATH_SEARCH_PATHS = $(value) @loader_path/Frameworks @executable_path/Frameworks
